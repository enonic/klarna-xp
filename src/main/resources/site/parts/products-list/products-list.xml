<part>
    <display-name>Products List</display-name>
    <config>
        <input type="TextLine" name="title">
            <label>Title</label>
            <occurrences minimum="0" maximum="1"/>
        </input>
        <input type="ContentSelector" name="item">
            <label>Products</label>
            <occurrences minimum="1" maximum="0"/>
            <config>
                <relationship-type>system:reference</relationship-type>
                <allow-content-type>product</allow-content-type>
            </config>
        </input>
    </config>
</part>