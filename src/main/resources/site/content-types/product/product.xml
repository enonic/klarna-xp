<?xml version="1.0" encoding="UTF-8"?>
<content-type>
    <display-name>Product</display-name>
    <super-type>base:structured</super-type>
    <allow-child-content>true</allow-child-content>
    <form>

        <input type="TextArea" name="intro">
            <label>Intro</label>
            <help-text></help-text>
            <occurrences minimum="0" maximum="1"/>
        </input>

        <input type="HtmlArea" name="body">
            <label>Intro</label>
            <help-text></help-text>
            <occurrences minimum="0" maximum="1"/>
        </input>

        <input name="image" type="ImageSelector">
            <label>Product image</label>
            <occurrences minimum="0" maximum="1"/>
            <config>
                <allowPath>./*</allowPath>
            </config>
        </input>

        <input name="type" type="RadioButton">
            <label>Type</label>
            <occurrences minimum="1" maximum="1"/>
            <help-text></help-text>
            <default>physical</default>
            <config>
                <option value="physical">Physical</option>
                <option value="discount">Discount</option>
                <option value="shipping_fee">Shipping Fee</option>
            </config>
        </input>

        <input type="Double" name="unit_price">
            <label>Unit Price</label>
            <!--<help-text>Unit price in cents, including tax</help-text>-->
            <occurrences minimum="1" maximum="1"/>
        </input>

        <input type="Double" name="tax_rate">
            <label>Tax Rate (%)</label>
            <help-text>Percentage of tax rate</help-text>
            <default>0</default>
            <occurrences minimum="1" maximum="1"/>
        </input>

        <input type="Double" name="discount_rate">
            <label>Discount Rate (%)</label>
            <help-text>Percentage of discount</help-text>
            <default>0</default>
            <occurrences minimum="0" maximum="1"/>
        </input>
    </form>
</content-type>