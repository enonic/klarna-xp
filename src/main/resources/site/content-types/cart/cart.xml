<?xml version="1.0" encoding="UTF-8"?>
<content-type>
    <display-name>Shopping cart</display-name>
    <super-type>base:structured</super-type>
    <allow-child-content>true</allow-child-content>
    <form>
        <input type="TextLine" name="session">
            <label>Session</label>
            <occurrences minimum="0" maximum="1"/>
        </input>
        <input type="TextLine" name="klarna_order_id">
            <label>Klarna Order ID</label>
            <occurrences minimum="0" maximum="1"/>
        </input>
        <input type="RadioButton" name="status">
            <label>Status</label>
            <occurrences minimum="1" maximum="1"/>
            <config>
                <option value="open_cart">Open Cart</option>
                <option value="checkout_incomplete">Checkout Incomplete</option>
                <option value="checkout_complete">Checkout Completed</option>
                <option value="created">Created</option>
            </config>
        </input>
        <item-set name="items">
            <label>Products</label>
            <items>
                <input name="quantity" type="Long">
                    <label>Quantity</label>
                    <occurrences minimum="1" maximum="1"/>
                </input>
                <input type="ContentSelector" name="product">
                    <label>Product</label>
                    <occurrences minimum="1" maximum="1"/>
                    <config>
                        <relationship>system:reference</relationship>
                        <allowType>product</allowType>
                    </config>
                </input>
            </items>
            <occurrences minimum="0" maximum="0"/>
        </item-set>
    </form>
</content-type>